<div class="col-md-6 py-3 overflow-auto" style="max-height: 100vh;">
    <div class="card bg-light mb-3">
        <div class="card-body">
            <h5 class="card-title">Create Post</h5>
            <%= form_with scope: :post, url: posts_path do |form| %>
                <div class="form-group">
                  <%= form.text_area :content, class: "form-control tinymce", rows: 3, placeholder: "What is happening?" %>
                </div>
                <div class="form-group">
                  <%= form.submit "Post", class: "btn btn-primary mt-2" %>
                </div>
            <% end %>
        </div>
    </div>
    <% @posts.each do |post| %>
        <div class="card text-bg-white mb-3 p-3">
          <div class="card-header d-flex justify-content-between align-items-center">
            <h5><%= post.user.profile.user_name || post.user.email %></h5>
            <% if post.user == current_user %>
              <div class="btn-group">
                <%= button_to "Delete", post_path(post), method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "Are you sure?" } %>
              </div>
            <% end %>
          </div>
          <div class="card-body">
            <p class="card-text"><%= post.content.html_safe %></p>
            <a href="#" class="btn btn-primary">Go somewhere</a>
          </div>
        </div>
    <% end %>      
</div>
