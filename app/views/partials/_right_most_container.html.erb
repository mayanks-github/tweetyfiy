<div class="col-md-3 py-3">
  <h5 class="text-center">People you may know</h5>
  <div class="overflow-auto" style="max-height: 80vh;">
    <% @users_to_follow.each do |user| %>
      <div class="card mb-3">
        <div class="card-body d-flex justify-content-between align-items-center">
          <h6 class="card-title text-truncate text-decoration-none">
            <%= link_to user.profile.user_name || user.email, "#", class: "text-dark", style: "font-weight: bold; color: #007bff;" %>
          </h6>
          <%= button_to "Follow", follows_url(id: user.id), method: :post, class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

